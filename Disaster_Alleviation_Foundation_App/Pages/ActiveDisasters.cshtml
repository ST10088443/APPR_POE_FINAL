@page
@model Disaster_Alleviation_Foundation_App.Pages.ActiveDisastersModel
@{
}
<h1>Active Disasters</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Location</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var disaster in Model.ActiveDisasters)
        {
            <tr>
                <td>@disaster.Id</td>
                <td>@disaster.StartDate.ToShortDateString()</td>
                <td>@disaster.EndDate.ToShortDateString()</td>
                <td>@disaster.Location</td>
                <td>@disaster.Description</td>
            </tr>
        }
    </tbody>
</table>