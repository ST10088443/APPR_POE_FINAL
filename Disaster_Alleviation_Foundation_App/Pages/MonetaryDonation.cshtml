@page
@model Disaster_Alleviation_Foundation_App.Pages.MonetaryDonationModel

<h2>Enter Monetary Donation</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="MonetaryDonation.Date"></label>
        <input asp-for="MonetaryDonation.Date" class="form-control" />
        <span asp-validation-for="MonetaryDonation.Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MonetaryDonation.Amount"></label>
        <input asp-for="MonetaryDonation.Amount" class="form-control" />
        <span asp-validation-for="MonetaryDonation.Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
